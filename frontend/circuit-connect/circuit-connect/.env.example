# ============================================
# Circuit Connect 환경변수 템플릿
# 이 파일을 .env로 복사한 후 실제 값을 채워주세요
# ============================================

# ── 프론트엔드 ──
VITE_API_BASE_URL=https://your-api-domain.example.com
VITE_APP_VERSION=1.0.0

# ── 백엔드 (FastAPI) ──
DATABASE_URL=postgresql://user:password@localhost:5432/circuit_connect
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
CORS_ORIGINS=https://circuit-connect.apps.tossmini.com,http://localhost:5173

# ── Kafka ──
KAFKA_TOPIC_EVENTS=game-events
KAFKA_TOPIC_DLQ=game-events-dlq

# ── ClickHouse ──
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DB=circuit_connect
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# ── Cloudflare Tunnel ──
CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token-here

# ── Grafana ──
GRAFANA_ADMIN_PASSWORD=your-grafana-password